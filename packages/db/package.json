{
  "name": "@printy-mobile/db",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "db:studio:prd": "NODE_ENV=production pnpx drizzle-kit@latest studio",
    "db:generate": "yes | pnpm exec drizzle-kit generate",
    "generate": "pnpm exec drizzle-kit generate",
    "db:pull": "pnpm exec drizzle-kit pull",
    "db:push": "pnpm exec drizzle-kit push",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts && tsx scripts/seed.ts",
    "db:studio": "pnpm exec drizzle-kit studio --port 8933",
    "dev": "pnpm run db:studio"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./schema/alias": "./src/schema/alias.ts",
    "./auth": "./src/generated/auth.ts",
    "./dtos": "./src/dtos/index.ts",
    "./types": "./src/types/index.ts",
    "./utils": "./src/utils/index.ts",
    "./db": "./src/db/index.ts",
    "./alias": "./src/schema/alias.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250709.0",
    "@types/bun": "latest",
    "drizzle-kit": "catalog:",
    "miniflare": "^4.20250705.0",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "zod": "catalog:"
  }
}
